<div class="row">
  <div class="col-md-12 bg-white p-5">
    <div class="w-50 mt-3 ml-0 mr-0 mx-auto">
      <div class="p-3"><h3>My Tasks</h3></div>

        <ul>
          <% @tasks.each do |task| %>
           <div class="list-unstyled card mt-3 form-control-lg"><li class="text-decoration-none"><%= link_to task.title.capitalize, task_path(task.id) %></li></div>
          <% end %>
        </ul>

        <%= link_to "Add a new task", tasks_new_path, class: "btn btn-primary mt-3"%>
    </div>
  </div>
</div>