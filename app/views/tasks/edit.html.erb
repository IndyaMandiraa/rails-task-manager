<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <div class="d-flex" ><%= f.check_box :completed, checked: @task.completed %><p>Completed</p></div>
  <%= f.submit %>
<% end %>

<%= link_to "Back to list", tasks_path %>